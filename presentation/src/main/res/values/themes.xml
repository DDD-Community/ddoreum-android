<resources>
    <!-- Base application theme. -->
    <style name="Theme.Ddoreum" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetStyle">@style/DdoreumBottomSheetDialog</item>
    </style>

    <style name="BottomNavStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemIconTint">@color/bottomnav_item_color</item>
        <item name="itemTextColor">@color/bottomnav_item_color</item>
        <item name="itemIconSize">28dp</item>
        <item name="itemTextAppearanceActive">@style/BottomNavStyle.TextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavStyle.TextAppearance</item>
    </style>

    <style name="BottomNavStyle.TextAppearance">
        <item name="android:textSize">@dimen/font_bottom_navigation</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="FullScreenDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="DdoreumBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:background">@drawable/bg_bottomsheet</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="DdoreumCTAButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:text">@string/confirm</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:height">48dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Font -->

    <style name="Ddoreum.Font" parent="Theme.Ddoreum">
        <item name="textAppearanceHeadline1">@style/Ddoreum.Font.Headline1</item>
        <item name="textAppearanceHeadline2">@style/Ddoreum.Font.Headline2</item>
        <item name="textAppearanceHeadline3">@style/Ddoreum.Font.Headline3</item>
        <item name="textAppearanceSubhead1">@style/Ddoreum.Font.Subhead1</item>
        <item name="textAppearanceBody1">@style/Ddoreum.Font.Body1</item>
        <item name="textAppearanceBody2">@style/Ddoreum.Font.Body2</item>
        <item name="textAppearanceDescription">@style/Ddoreum.Font.Description</item>
    </style>

    <style name="Ddoreum.Font.Headline1">
        <item name="android:textSize">@dimen/ddoreum_font_headline1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Ddoreum.Font.Headline2">
        <item name="android:textSize">@dimen/ddoreum_font_headline2</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Ddoreum.Font.Headline3">
        <item name="android:textSize">@dimen/ddoreum_font_headline3</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Ddoreum.Font.Body1">
        <item name="android:textSize">@dimen/ddoreum_font_body1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Ddoreum.Font.Body2">
        <item name="android:textSize">@dimen/ddoreum_font_body2</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Ddoreum.Font.Subhead1">
        <item name="android:textSize">@dimen/ddoreum_font_subhead1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Ddoreum.Font.Description">
        <item name="android:textSize">@dimen/ddoreum_font_description</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>